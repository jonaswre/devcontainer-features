{
  "default-debian": {
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "features": {
      "claude-code": {}
    }
  },
  "default-ubuntu": {
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "claude-code": {}
    }
  },
  "with-firewall": {
    "image": "debian:bullseye",
    "features": {
      "claude-code": {
        "enableFirewall": true,
        "additionalDomains": "api.example.com"
      }
    }
  },
  "no-firewall": {
    "image": "ubuntu:22.04",
    "features": {
      "claude-code": {
        "enableFirewall": false
      }
    }
  },
  "node-18": {
    "image": "debian:bullseye",
    "features": {
      "claude-code": {
        "nodeVersion": "18"
      }
    }
  },
  "node-22": {
    "image": "ubuntu:22.04",
    "features": {
      "claude-code": {
        "nodeVersion": "22"
      }
    }
  },
  "minimal": {
    "image": "debian:bullseye-slim",
    "features": {
      "claude-code": {
        "enableFirewall": false,
        "installZsh": false
      }
    }
  },
  "dangerous-skip": {
    "image": "ubuntu:latest",
    "features": {
      "claude-code": {
        "dangerousSkipPermissions": true
      }
    }
  },
  "with-proxy": {
    "image": "debian:latest",
    "features": {
      "claude-code": {
        "proxyUrl": "http://proxy.example.com:8080",
        "additionalDomains": "internal.corp.com"
      }
    }
  },
  "full-featured": {
    "image": "mcr.microsoft.com/devcontainers/base:debian",
    "features": {
      "claude-code": {
        "enableFirewall": true,
        "nodeVersion": "20",
        "installZsh": true,
        "additionalDomains": "custom.api.com",
        "apiKeySource": "environment"
      }
    }
  }
}